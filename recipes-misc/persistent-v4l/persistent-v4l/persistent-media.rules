ACTION=="remove",   GOTO="persistent_media_end"
SUBSYSTEM!="media", GOTO="persistent_media_end"
ENV{MAJOR}=="",     GOTO="persistent_media_end"

ENV{ID_PATH}=="",   IMPORT{builtin}="path_id"

ATTR{name}!="", SYMLINK+="v4l/by-name/$attr{name}"

SYMLINK+="media/by-path/$env{ID_PATH}", TAG+="systemd", ENV{SYSTEMD_ALIAS}="/sys/media/$env{ID_PATH}"

LABEL="persistent_media_end"
